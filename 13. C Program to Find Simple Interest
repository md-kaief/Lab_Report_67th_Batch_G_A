#include <stdio.h>

int main() {
    float principal, rate, time, interest;

printf("Enter Principal amount (P): ");
    scanf("%f", &principal);

printf("Enter Rate of interest (R in %%): ");
    scanf("%f", &rate);

printf("Enter Time (T in years): ");
    scanf("%f", &time);

    interest = (principal * rate * time) / 100;

    printf("Simple Interest = %.2f\n", interest);

    return 0;
}
